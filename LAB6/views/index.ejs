<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="assets/main.css" />
    <title class="title">E-commerce</title>
  </head>
  <body>
    <div class="container">
      <h1 class="anim">Welcome to YeongHwan Commerce</h1>
      <ul class="nav-bar">
        <li>
          <a class="redirect-btn" id="page-now" href="#">Main page</a>
        </li>
        <li>
          <a class="redirect-btn" href="login">Login</a>
        </li>
        <li>
          <a class="redirect-btn" href="signup">Signup</a>
        </li>
      </ul>
      <div class="line"></div>

      <div class="formbox">
        <p>
          <label>
            Category filter:<br />
            <select name="major" id="major">
              <option value="ALL">ALL</option>
              <option value="Biology">Biology</option>
              <option value="Computer science">Computer science</option>
              <option value="Physics">Physics</option>
              <option value="Chemistry">Chemistry</option>
            </select>
          </label>
        </p>
        <p>
          <label>
            Keyword filter:<br />
            <input type="search" id="search" />
          </label>
        </p>
        <p>
          <button id="search-button" type="button">Search</button>
        </p>
      </div>
      <div class="line"></div>
      <div class="description-container">
        <h2 class="description">Description</h2>
        <div class="description-line"></div>
        <p class="description-content">
          major book for university.major book for university.major book for
          university.major book for university.major book for university.major
          book for university.major book for university.major book for
          university.major book for university.
        </p>
      </div>

      <div class="line"></div>
      <div class="product-list">
        <h2>Product list</h2>

        <div class="hidden-data" style="display: none">
          <% for(let product of products){ %>
          <div
            class="product"
            style="width: 200px; height: 200px; margin-bottom: 24px"
            data-id="<%= product.product_id %>"
            data-category="<%= product.product_category %>"
            data-title="<%= product.product_title %>"
            data-image="<%= product.product_image %>"
          >
            <a href="/products/<%= product.product_id %>">
              <img
                src="<%= product.product_image %>"
                style="object-fit: cover; width: 100%"
              />
            </a>
          </div>
          <% } %>
        </div>

        <div class="products">
          <% for(let product of products){ %>
          <div
            class="product"
            style="width: 200px; height: 200px; margin-bottom: 24px"
            data-category="<%= product.product_category %>"
            data-title="<%= product.product_title %>"
          >
            <a href="/products/<%= product.product_id %>">
              <img
                src="<%= product.product_image %>"
                style="object-fit: cover; width: 100%"
              />
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
  <script src="assets/script.js"></script>
</html>
